<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

   <androidx.cardview.widget.CardView
       android:id="@+id/firstCard"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:layout_marginTop="50dp"
       android:layout_marginEnd="24dp"
       android:layout_marginStart="24dp"
       android:layout_marginBottom="5dp"
       android:clickable="true"
       android:focusable="true"
       app:cardCornerRadius="50dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:backgroundTint="@color/cyan"
       android:elevation="200dp">

      <TextView
          android:id="@+id/kcfText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/temperature_units"
          android:textColor="@color/black"
          android:layout_gravity="center"
          android:textSize="60sp"
          android:textAlignment="center"/>
   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:id="@+id/secondCard"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:layout_marginTop="10dp"
       android:layout_marginEnd="24dp"
       android:layout_marginStart="24dp"
       android:layout_marginBottom="5dp"
       android:clickable="true"
       android:focusable="true"
       app:cardCornerRadius="50dp"
       app:layout_constraintTop_toBottomOf="@+id/firstCard"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:backgroundTint="@color/purple"
       android:elevation="200dp">

      <TextView
          android:id="@+id/kmcText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/distance_units"
          android:textColor="@color/black"
          android:layout_gravity="center"
          android:textSize="60sp"
          android:textAlignment="center"/>
   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:id="@+id/thirdCard"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:layout_marginTop="10dp"
       android:layout_marginEnd="24dp"
       android:layout_marginStart="24dp"
       android:layout_marginBottom="5dp"
       android:clickable="true"
       android:focusable="true"
       app:cardCornerRadius="50dp"
       app:layout_constraintTop_toBottomOf="@+id/secondCard"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:backgroundTint="@color/green"
       android:elevation="200dp">

      <TextView
          android:id="@+id/kgmText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/weight_units"
          android:textColor="@color/black"
          android:layout_gravity="center"
          android:textSize="60sp"
          android:textAlignment="center"/>
   </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>